<div id="header" class="header-absolute" >	
	<nav id="top" >
	  <div class="container">
		<div class="box-inner">
			<ul class="box-top box-top-left pull-left">
				<li class="header-welcome"><p><span>{{ text_welcome }}</span></p></li>
			</ul>
			<ul class="box-top box-top-right pull-right">
				<li><a href="{{ contact }}" title="{{ text_store_locator }}"><i class="ion-ios-location-outline"></i> <span class="hidden-xs">{{ text_store_locator }}</span></a></li>
				<li><a href="{{ checkout }}" title="{{ text_checkout }}"><i class="ion-ios-checkmark-outline"></i> <span class="hidden-xs">{{ text_checkout }}</span></a></li>
				<!--li><a href="{{ shopping_cart }}" title="{{ text_shopping_cart }}"><i class="fa fa-shopping-cart"></i> <span class="hidden-xs">{{ text_shopping_cart }}</span></a></li-->
				<li id="top-links" class="nav header-dropdown">
				  <ul class="list-inline">
					<li class="dropdown"><a href="{{ account }}" title="{{ text_account }}" class="dropdown-toggle" data-toggle="dropdown"><i class="ion-ios-person-outline"></i> <span class="hidden-xs">{{ text_account }}</span> <i class="icon-right ion-ios-arrow-down"></i></a>
					  <ul class="dropdown-menu dropdown-menu-right pt-account">
						{% if logged %}
						<li><a href="{{ account }}">{{ text_account }}</a></li>
						<li><a href="{{ order }}">{{ text_order }}</a></li>
						<li><a href="{{ transaction }}">{{ text_transaction }}</a></li>
						<li><a href="{{ download }}">{{ text_download }}</a></li>
						<li><a id="pt-logout-link" href="{{ logout }}">{{ text_logout }}</a></li>
						{% else %}
						<li><a id="pt-register-link" href="{{ register }}">{{ text_register }}</a></li>
						<li><a id="pt-login-link" href="{{ login }}">{{ text_login }}</a></li>
						{% endif %}
					  </ul>
					</li>
				  </ul>
				</li>
				<li class="currency">
				{% if header_currency %}
				  {{ currency }}
				{% endif %}
				</li>
				<li class="language">
				{{ language }}
				</li>
				
			</ul>
		</div>
	  </div>
	</nav>
	<header class="scroll-fix ">
		<div class="header-middle">	
			<div class="container">
				<div class="box-inner">
					<div class="box-inner-inner">
						<div class="col-logo">
							{{ position3 }}		
							{{ position2 }}							
							<div id="logo">
							{% if logo %}<a href="{{ home }}"><img src="{{ logo }}" title="{{ name }}" alt="{{ name }}" class="img-responsive" /></a>{% else %}
							  <h1><a href="{{ home }}">{{ name }}</a></h1>
							  {% endif %}
							</div>
						</div>
						<div class="col-cart">
							<div class="inner">
								<a href="{{ wishlist }}" id="wishlist-total" ><span>{{ text_wishlist }}</span></a>
								{% if header_cart %}{{ cart }}{% endif %}
							</div>
						</div>
					</div>
					<div class="col-search">
						{{ search }}
					</div>
				</div>
			</div>
		</div>
	</header>
	<div class="header-slide background-full">
		<div class="container">
			<div class="row">
				<div class="col col-left col-sm-12 col-md-12">
					{{ position1 }}
				</div>
				<div class="col col-center col-sm-12 col-md-8">
					{{ position4 }}
				</div>
				<div class="col col-right col-sm-12 col-md-4">
					{{ position6 }}
				</div>
			</div>
			{{ position9 }}
		</div>
	</div>
</div>